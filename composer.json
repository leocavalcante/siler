{
    "name": "leocavalcante/siler",
    "type": "library",
    "description": "Siler is a set of general purpose high-level abstractions aiming an API for declarative programming in PHP.",
    "keywords": [
        "framework",
        "micro",
        "api",
        "router",
        "functional"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "leocavalcante",
            "email": "lc@leocavalcante.com"
        }
    ],
    "require": {
        "php": ">=7.0.0"
    },
    "minimum-stability": "stable",
    "require-dev": {
        "phpstan/phpstan": "*",
        "squizlabs/php_codesniffer": "*",
        "vlucas/phpdotenv": "*",
        "twig/twig": "*",
        "phpunit/phpunit": "*",
        "cboden/ratchet": "*",
        "webonyx/graphql-php": "*",
        "lcobucci/jwt": "*",
        "gabordemooij/redbean": "*"
    },
    "autoload": {
        "psr-4": {
            "Siler\\": "src/"
        },
        "files": [
            "src/Container/Container.php",
            "src/Dotenv/Dotenv.php",
            "src/Functional/Monad/Monad.php",
            "src/Functional/Functional.php",
            "src/Graphql/Graphql.php",
            "src/Http/Http.php",
            "src/Http/Request.php",
            "src/Http/Response.php",
            "src/Jwt/Jwt.php",
            "src/Ratchet/Ratchet.php",
            "src/Route/Route.php",
            "src/Twig/Twig.php",
            "src/Siler.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Siler\\Test\\": "tests/"
        }
    },
    "scripts": {
        "fix": "phpcbf",
        "lint": "phpcs",
        "unit": "phpunit",
        "stan": "phpstan analyse -l 4 -c phpstan.neon src",
        "test": [
            "@composer lint",
            "@composer unit",
            "@composer stan"
        ]
    },
    "suggest": {
        "vlucas/phpdotenv": "Storing configuration in the environment is one of the tenets of a twelve-factor app."
    }
}
