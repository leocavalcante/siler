{
    "name": "leocavalcante/siler",
    "type": "library",
    "description": "Siler is a set of general purpose high-level abstractions aiming an API for declarative programming in PHP.",
    "keywords": [
        "api",
        "framework",
        "functional",
        "micro",
        "router"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "leocavalcante",
            "email": "lc@leocavalcante.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-json": "*"
    },
    "minimum-stability": "stable",
    "require-dev": {
        "ext-mongodb": "^1.5",
        "cboden/ratchet": "^0.4",
        "cocur/slugify": "^3.2",
        "gabordemooij/redbean": "^5.2",
        "lcobucci/jwt": "^3.2",
        "mongodb/mongodb": "^1.4",
        "monolog/monolog": "^1.24",
        "phan/phan": "^1.2",
        "phpunit/phpunit": "^8.0",
        "ratchet/pawl": "^0.3",
        "react/http": "^0.8",
        "squizlabs/php_codesniffer": "^3.4",
        "swiftmailer/swiftmailer": "^6.1",
        "twig/twig": "^2.6",
        "vlucas/phpdotenv": "^3.3",
        "webonyx/graphql-php": "^0.13",
        "zendframework/zend-diactoros": "^2.1",
        "zendframework/zend-httphandlerrunner": "^1.1",
        "zendframework/zend-stratigility": "^3.1"
    },
    "autoload": {
        "files": [
            "src/Container/Container.php",
            "src/Db/Db.php",
            "src/Db/Mongo.php",
            "src/Diactoros/Diactoros.php",
            "src/Dotenv/Dotenv.php",
            "src/Functional/Functional.php",
            "src/Functional/Monad/Identity.php",
            "src/Functional/Monad/Maybe.php",
            "src/Functional/Monad/Monad.php",
            "src/GraphQL/GraphQL.php",
            "src/GraphQL/SubscriptionsManager.php",
            "src/GraphQL/SubscriptionsServer.php",
            "src/Http/Http.php",
            "src/Http/Request.php",
            "src/Http/Response.php",
            "src/HttpHandlerRunner/HttpHandlerRunner.php",
            "src/Mail/SwiftMailer.php",
            "src/Monolog/Monolog.php",
            "src/Prelude/Mistake.php",
            "src/Prelude/Str.php",
            "src/Prelude/Success.php",
            "src/Prelude/Tuple.php",
            "src/Route/Route.php",
            "src/Stratigility/RequestHandlerDecorator.php",
            "src/Stratigility/Stratigility.php",
            "src/Swoole/Swoole.php",
            "src/Twig/Twig.php",
            "src/Siler.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Siler\\Test\\": "tests/"
        }
    },
    "scripts": {
        "lint": "phpcs",
        "phan": "phan",
        "unit": "phpunit",
        "test": [
            "@composer lint",
            "@composer phan",
            "@composer unit"
        ]
    },
    "suggest": {
        "vlucas/phpdotenv": "Storing configuration in the environment is one of the tenets of a twelve-factor app."
    }
}