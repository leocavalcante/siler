{
    "name": "leocavalcante/siler",
    "type": "library",
    "description": "Keep it simple, stupid",
    "keywords": ["framework","micro","api","router"],
    "license": "MIT",
    "authors": [
        {
            "name": "leocavalcante",
            "email": "lc@leocavalcante.com"
        }
    ],
    "require": {
        "php": ">=5.6.0"
    },
    "minimum-stability": "stable",
    "require-dev": {
        "phpstan/phpstan": "*",
        "squizlabs/php_codesniffer": "*",
        "vlucas/phpdotenv": "*",
        "twig/twig": "*",
        "phpunit/phpunit": "*",
        "cboden/ratchet": "*",
        "webonyx/graphql-php": "*"
    },
    "autoload": {
        "psr-4": { "Siler\\": "src/" },
        "files": [
            "src/Container/Container.php",
            "src/Dotenv/Dotenv.php",
            "src/Functional/Functional.php",
            "src/Graphql/Graphql.php",
            "src/Http/Http.php",
            "src/Http/Request.php",
            "src/Http/Response.php",
            "src/Ratchet/Ratchet.php",
            "src/Route/Route.php",
            "src/Twig/Twig.php",
            "src/Siler.php"
        ]
    },
    "autoload-dev": {
        "psr-4": { "Siler\\Test\\": "tests/" }
    },
    "scripts": {
        "fix": "phpcbf",
        "lint": "phpcs",
        "unit": "phpunit",
        "stan": "phpstan analyse -l 4 -c phpstan.neon src",
        "test": [
            "@composer lint",
            "@composer unit",
            "@composer stan"
        ]
    },
    "suggest": {
        "vlucas/phpdotenv": "Storing configuration in the environment is one of the tenets of a twelve-factor app."
    }
}
